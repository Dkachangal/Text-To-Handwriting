<Manager@ScreenManager>:
    InputImage:
    InputText:
    DisplayOutput:

<InputImage@Screen>:
    name: "inputimg"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.992, 0.988, 0.941, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDLabel:
            text: "[b]Text To Handwriting Generator[/b]"
            markup: True
            theme_text_color: "Custom"
            text_color: 0.545, 0.518, 0.310, 1
            font_size: 55
            bold: True
            font_name: "fonts/FrankRuhlLibre-VariableFont_wght.ttf"
            size_hint: None, None
            width: root.width * 0.9
            height: self.texture_size[1]
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            pos_hint: {"center_x": 0.5, "top": 0.92}

        MDTextField:
            id: userChar
            hint_text: "Enter a single character"
            helper_text: "This will be converted to handwriting"
            helper_text_mode: "on_focus"  
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            font_size: 20

        MDFillRoundFlatButton:
            id: page
            text: "Add Page"
            size_hint: None, None
            size: 600, 120
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            md_bg_color: 0.545, 0.518, 0.310, 1
            on_release: app.open_file_picker("page")


        MDFillRoundFlatButton:
            text: "Add Handwriting"
            size_hint: None, None
            size: 600, 120
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            md_bg_color: 0.545, 0.518, 0.310, 1
            on_release: app.call_getChar()
            on_release: app.open_file_picker("character") 

        MDIconButton:
            icon: "arrow-up-circle"
            size_hint: None, None
            size: 100, 100           # button size
            icon_size: "64sp"        # icon inside the button
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            theme_icon_color: "Custom"
            icon_color: 0.545, 0.518, 0.310, 1
            on_release:
                app.root.current = "inputtext"
                root.manager.transition.direction = "up"

<InputText@Screen>:
    name: "inputtext"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.992, 0.988, 0.941, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDLabel:
            text: "[b]Add Your Text[/b]"
            markup: True
            theme_text_color: "Custom"
            text_color: 0.545, 0.518, 0.310, 1
            font_size: 55
            bold: True
            font_name: "fonts/FrankRuhlLibre-VariableFont_wght.ttf"
            size_hint: None, None
            width: root.width * 0.9
            height: self.texture_size[1]
            text_size: self.width, None
            halign: "center"
            valign: "middle"
            pos_hint: {"center_x": 0.5, "top": 0.92}

        TextInput:
            id: data
            hint_text: "Enter text"
            helper_text: "This will be added on the page"
            
            size_hint_x: None
            size_hint_y: None
            height:350
            width:500
            helper_text_mode: "on_focus"  
            size_hint_x: 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            font_size: 20
        
        MDIconButton:
            icon: "pencil-circle"
            size_hint: None, None
            size: 60, 60           # button size
            icon_size: "50sp"        # icon inside the button
            pos_hint: {"center_x": 0.75, "center_y": 0.1}
            theme_icon_color: "Custom"
            icon_color: 0.545, 0.518, 0.310, 1
            on_release:
                on_release: app.call_inpTxt()

        
        MDIconButton:
            icon: "arrow-down-circle"
            size_hint: None, None
            size: 60, 60           # button size
            icon_size: "50sp"        # icon inside the button
            pos_hint: {"center_x": 0.25, "center_y": 0.1}
            theme_icon_color: "Custom"
            icon_color: 0.545, 0.518, 0.310, 1
            on_release:
                app.root.current = "inputimg"
                root.manager.transition.direction = "down"
            

<DisplayOutput@Screen>:
    name: "displayoutput"
    MDLabel:
        text: "Display Output Screen"
        halign: "center"
